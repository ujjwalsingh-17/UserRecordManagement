<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow" >
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User (<%=user.name%>) </h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%=user._id%>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name :</label>
                            <input type="text" name="name" class="form-contorl form-control-sm" placeholder="Enter name" value="<%=user.name%>" required>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email :</label>
                            <input type="email" name="email" class="form-contorl form-control-sm" placeholder="Enter email" value="<%=user.email%>" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone">Phone :</label>
                            <input type="tel" name="phone" class="form-contorl form-control-sm" placeholder="Enter phone" value="<%=user.phone%>" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image :</label>
                            <input type="file" name="image" class="form-contorl form-control-sm" required>
                            <img src="/e<%=user.image%>" alt="" width="=100" class="img-th
                             mt-1">
                        </div>
                        <input type="hidden
                        " name="old-image" value="<%=user.image
                        %>">
                        <div class="mb-3 text-center">
                            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-md">
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('layout/footer') %>

 